<div>
  <div class="profile-banner" style="background-image: url(<%= cl_image_path @profile.profile_banner %>)">

    <div class="profile-information">

      <%= cl_image_tag @profile.profile_avatar, class: "avatar-square-profile" %>

      <div class="personal-info">
        <ul class="personal-data list-inline">
          <li class="loc-user list-inline-item"><%= @profile.location %></li>
        </ul>

        <div class="overflow-scroll__scroller">
          <%= @profile.bio %>
        </div>
      </div>
    </div>

    <div class="profile-passport">
      <h1 class="profile-name"><%= @profile.username %></h1>
      <%= image_tag 'doggy-stars.svg', class: "dog-bot" %>
      <%= simple_form_for([@profile, @friendship]) do |f| %>
        <%= f.button :submit %>
      <% end %>
      <%= @friendships %>
    </div>
  </div>

  <div class="visor-moments">
    <div class="visor-header"><p class="visor-txt"><%= @profile.username %>' moments</p></div>
  </div>
  <div class="visor-events">
    <div class="visor-header"><p class="visor-txt"><%= @profile.username %>' events</p></div>
  </div>
  <div class="visor-top-songs">
    <div class="visor-header"><p class="visor-txt"><%= @profile.username %>' Top Songs</p></div>
      <%= image_tag 'logo.svg', class: "visor-logo" %>
  </div>
</div>
