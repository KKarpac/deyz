
  <div class="header-container">
    <h1 class="title-header">Friends</h1>
    <p class="hover-underline-animation"></p>
  </div>
  <!-- display your moments and the moments that have been directly shared to you -->

  <div class="grid-friends">
    <% @profiles.each do |profile| %>
    <div class="profile-card avatar">
      <%= profile.username %>
      <%= cl_image_tag(profile.profile_avatar, class: 'avatar')%>
    </div>
    <% end %>
  </div>

