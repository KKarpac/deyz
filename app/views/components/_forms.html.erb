<!-- ********************************************* -->

<%= simple_form_for(@event) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <!-- photo for event avatar -->
  <%= f.input :banner %>
  <%= f.input :banner_cache, as: :hidden %>

  <%= f.input :event_avatar %>
  <%= f.input :event_avatar_cache, as: :hidden %>

  <!-- banner photo upload -->
  <%= f.submit %>
<% end %>
